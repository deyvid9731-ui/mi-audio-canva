<body>

    <div class="play-btn" onclick="toggleAudio()"></div>
    <audio id="miAudio" src="Suerte He Tenido (En Vivo) - Banda Corona Del Rey - Banda Corona Del Rey.mp3"></audio>

    <script>
        var audio = document.getElementById("miAudio");
        function toggleAudio() {
            if (audio.paused) { audio.play(); } 
            else { audio.pause(); }
        }
    </script>
